{
    "manifest_version": 3,
    "name": "TabStacker",
    "description": "With TabStacker, you can effortlessly corral all your open tabs into a single, sleek page, decluttering your workspace",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup.html",
        "default_title": "TabStacker",
        "default_icon": "/LogoIcon.png"
    },
    "chrome_url_overrides": {
        "newtab": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://tabstacker.vercel.app/*"
    ],
    "icons": {
        "16": "/LogoIcon.png",
        "48": "/LogoIcon.png",
        "128": "/LogoIcon.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://tabstacker.vercel.app/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}